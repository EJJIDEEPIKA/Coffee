<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.view.coffeeshop.MainActivity"
    android:background="@drawable/m1"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#90f5f2f2"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_margin="20dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="         COFFEE      ORDER "
        android:textColor="#f20dee"
        android:layout_margin="20dp"
        android:textStyle="bold"
        android:fontFamily="cursive"
        android:textSize="25dp"
        android:padding="10dp" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:padding="20dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="40dp"
            android:layout_weight="1"
        android:id="@+id/c1"
            android:textColor="@color/colorAccent"
            android:fontFamily="cursive"
            android:textSize="25dp"
            android:background="@drawable/back"
        android:text="Cappuccino"/>
        <Spinner
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:entries="@array/count"
            android:layout_marginLeft="5dp"
            android:id="@+id/s1"
            android:background="@drawable/back"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">
    <CheckBox
        android:layout_width="140dp"
        android:layout_height="40dp"
        android:id="@+id/c2"
        android:background="@drawable/back"
        android:text="Espresso"
        android:layout_weight="1"

        android:textColor="@color/colorAccent"
        android:fontFamily="cursive"
        android:textSize="25dp"/>
        <Spinner
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:entries="@array/count"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:id="@+id/s2"
            android:background="@drawable/back" />
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">
        <CheckBox
        android:layout_width="140dp"
        android:layout_height="40dp"
        android:id="@+id/c3"
            android:layout_weight="1"
            android:background="@drawable/back"
        android:text="Irish coffee"
            android:textColor="@color/colorAccent"
            android:fontFamily="cursive"
            android:textSize="25dp"/>
            <Spinner
                android:layout_width="60dp"
                android:layout_weight="1"
                android:layout_height="40dp"
                android:entries="@array/count"
                android:layout_marginLeft="5dp"
                android:id="@+id/s3"
                android:background="@drawable/back"/>
        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp">
            <CheckBox
        android:layout_width="140dp"
        android:layout_height="40dp"
        android:id="@+id/c4"
                android:layout_weight="1"
                android:background="@drawable/back"
                android:textColor="@color/colorAccent"
                android:fontFamily="cursive"
                android:textSize="25dp"
        android:text="Macchiato"/>
                <Spinner
                    android:layout_width="60dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:id="@+id/s4"
                    android:entries="@array/count"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/back"/>
            </LinearLayout>

        <ImageButton
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/im"
            android:onClick="submit" />
    </LinearLayout>
    </ScrollView>
    </LinearLayout>
</LinearLayout>
